<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/xuehao"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="xuehao"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="#1d38d1"
        android:textSize="18sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingEnd="30dp"
        android:paddingStart="30dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#1d38d1">

            <EditText
                android:id="@+id/et_teacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="奖项名称"
                android:inputType="textPersonName"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="#1d38d1"
                android:textSize="18sp" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:paddingEnd="30dp"
        android:paddingStart="30dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#1d38d1">

            <EditText
                android:id="@+id/et_classnName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="所在班级"
                android:inputType="textPersonName"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="#1d38d1"
                android:textSize="18sp" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingEnd="30dp"
    android:paddingStart="30dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_massage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#1d38d1">

        <EditText
            android:id="@+id/et_massage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="获得时间"
            android:inputType="textPersonName"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="#1d38d1"
            android:textSize="18sp" />
    </android.support.design.widget.TextInputLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingEnd="30dp"
        android:paddingStart="30dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_massage1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#1d38d1">

            <EditText
                android:id="@+id/et_massage1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="奖项凭证"
                android:inputType="textPersonName"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="#1d38d1"
                android:textSize="18sp" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
<Button
    android:id="@+id/shangchuan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="提交"/>
</LinearLayout>